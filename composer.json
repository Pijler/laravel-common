{
    "name": "pijler/laravel-common",
    "type": "library",
    "description": "Simple package with several common features in Laravel applications.",
    "keywords": [
        "common",
        "laravel",
        "package"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jo√£o Pedro Lopes",
            "email": "joaopalopes24@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0|^12.0"
    },
    "require-dev": {
        "pestphp/pest": "^4.1",
        "pestphp/pest-plugin-laravel": "^4.0",
        "orchestra/testbench": "^10.6",
        "laravel/pint": "^1.25",
        "inertiajs/inertia-laravel": "^2.0",
        "bacon/bacon-qr-code": "^3.0",
        "mobiledetect/mobiledetectlib": "^4.8",
        "pragmarx/google2fa": "^9.0",
        "spatie/laravel-data": "^4.18",
        "spatie/laravel-medialibrary": "^11.15"
    },
    "autoload": {
        "psr-4": {
            "Common\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "scripts": {
        "lint": [
            "@php vendor/bin/pint --ansi"
        ],
        "test": [
            "@php vendor/bin/pest"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Common\\ServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable"
}
